<p id="notice"><%= notice %></p>

<h1>Listing Cancellors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cancellors.each do |cancellor| %>
      <tr>
        <td><%= cancellor.first_name %></td>
        <td><%= cancellor.last_name %></td>
        <td><%= cancellor.birthday %></td>
        <td><%= link_to 'Show', cancellor %></td>
        <td><%= link_to 'Edit', edit_cancellor_path(cancellor) %></td>
        <td><%= link_to 'Destroy', cancellor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

